<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Transparency.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Define your light and dark theme colors here -->
            <Color x:Key="LightBackgroundColor">#FFFFFF</Color>
            <Color x:Key="LightTextColor">#000000</Color>
            <Color x:Key="DarkBackgroundColor">#121212</Color>
            <Color x:Key="DarkTextColor">#FFFFFF</Color>

            <!-- Define default theme resources that will be updated at runtime -->
            <Color x:Key="BackgroundColor">Transparent</Color>
            <Color x:Key="TextColor">Transparent</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
